{
   "name":"reMarker",
   "version":"0.4",
   "manifest_version":2,
   "description":"Read full articles on Haaretz and TheMarker websites",
   "homepage_url":"https://github.com/gorshco/reMarker",
   "icons":{
      "16":"icons/icon16.png",
      "48":"icons/icon48.png",
      "128":"icons/icon128.png"
   },
   "background":{
      "scripts":[
         "src/background.js"
      ],
      "persistent":true
   },
   "permissions":[
      "webRequest",
      "webRequestBlocking",
      "https://www.haaretz.co.il/*",
      "https://www.haaretz.com/*",
      "https://www.themarker.com/*",
      "https://youtu.be/dQw4w9WgXcQ?t=31"
   ]
}